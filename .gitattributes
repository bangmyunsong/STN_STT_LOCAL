# Set default behavior to automatically normalize line endings
* text=auto

# Force UTF-8 encoding for text files
*.md text eol=lf
*.txt text eol=lf
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.env text eol=lf
*.bat text eol=crlf
*.sh text eol=lf

# Binary files
*.mp3 binary
*.wav binary
*.m4a binary
*.flac binary
*.aac binary
*.ogg binary
*.xlsx binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
